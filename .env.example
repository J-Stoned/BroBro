# BroBro Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains secrets!

# ===== GoHighLevel OAuth 2.0 Configuration =====
# Get these from GHL Marketplace: https://marketplace.gohighlevel.com/
GHL_CLIENT_ID=your_ghl_client_id_here
GHL_CLIENT_SECRET=your_ghl_client_secret_here
GHL_REDIRECT_URI=http://localhost:3000/oauth/callback

# ===== Content Scraping =====
# Firecrawl API key for scraping GHL documentation
# Get free key at: https://www.firecrawl.dev/
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# ===== Encryption =====
# 32-byte encryption key for storing OAuth tokens securely
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_32_byte_hex_key_here

# ===== Google Gemini File Search Configuration =====
# Primary search mechanism for knowledge base
# Get API key from: https://console.cloud.google.com/
GOOGLE_API_KEY=your_google_api_key_here

# Gemini File Search Store ID
# Created via Google AI integration in web/backend/routes/gemini_routes.py
GEMINI_FILE_SEARCH_STORE_ID=fileSearchStores/your_store_id_here

# ===== CORS Configuration =====
# Comma-separated list of allowed origins (for production)
# Default: http://localhost:3000,http://localhost:5173
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===== Application Configuration =====
NODE_ENV=development
# Options: development, production, test

LOG_LEVEL=info
# Options: debug, info, warn, error

# ===== MCP Server Ports (if using HTTP transport) =====
MCP_GHL_API_PORT=3001
MCP_MEMORY_SERVICE_PORT=3002

# ===== API Rate Limiting =====
GHL_RATE_LIMIT_BURST=100
GHL_RATE_LIMIT_BURST_WINDOW_SECONDS=10
GHL_RATE_LIMIT_DAILY=200000

# ===== Development / Testing =====
# Set to true to enable verbose logging
DEBUG=false

# Set to true to use mock data instead of real GHL API
USE_MOCKS=false

# Token refresh buffer (minutes before expiry)
TOKEN_REFRESH_BUFFER_MINUTES=5
