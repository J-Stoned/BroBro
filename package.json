{
  "name": "brobro",
  "version": "1.0.0",
  "description": "GoHighLevel AI Assistant with comprehensive knowledge base trained on GHL docs, YouTube tutorials, and 2025 best practices",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "scrape-docs": "node scripts/scrape-ghl-docs.js",
    "extract-yt": "node scripts/extract-yt-transcripts.js",
    "chunk-docs": "node scripts/chunk-documents.js",
    "chunk:all": "node scripts/chunk-documents.js --source all",
    "chunk:ghl": "node scripts/chunk-documents.js --source ghl-docs",
    "chunk:best-practices": "node scripts/chunk-documents.js --source best-practices",
    "chunk:snapshots": "node scripts/chunk-documents.js --source snapshots",
    "chunk:curated": "npm run chunk:best-practices && npm run chunk:snapshots",
    "build-kb": "node scripts/build-knowledge-base.js",
    "embed-content": "node scripts/embed-content.js",
    "start-chroma": "docker-compose up -d",
    "stop-chroma": "docker-compose down",
    "restart-chroma": "docker-compose restart",
    "chroma-logs": "docker-compose logs -f chroma",
    "init-chroma": "node scripts/init-chroma-collections.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:chroma": "node tests/chroma-connection.test.js",
    "test:firecrawl": "node tests/firecrawl-test.js",
    "test:youtube": "node tests/youtube-test.js",
    "test:content-acquisition": "npm run test:firecrawl && npm run test:youtube",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "build-ghl-mcp": "cd mcp-servers/ghl-api-server && npm run build",
    "dev-ghl-mcp": "cd mcp-servers/ghl-api-server && npm run dev",
    "test-mcp": "node tests/mcp-servers/test-ghl-api.js",
    "test-kb": "node tests/knowledge-base/test-retrieval.js",
    "validate:curated": "node scripts/validate-curated-content.js",
    "setup": "npm run create-dirs && npm install",
    "create-dirs": "node scripts/create-project-structure.js",
    "prepare": "husky install",
    "cleanup": "powershell -ExecutionPolicy Bypass -File web/scripts/cleanup-windows.ps1",
    "cleanup-bat": "web\\scripts\\cleanup-windows.bat",
    "start-all": "web\\scripts\\start-all.bat",
    "restart": "web\\scripts\\restart-all.bat"
  },
  "keywords": [
    "gohighlevel",
    "ghl",
    "automation",
    "workflows",
    "mcp",
    "ai-assistant",
    "claude",
    "rag",
    "knowledge-base"
  ],
  "author": "Justin",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@xenova/transformers": "^2.0.0",
    "chromadb": "^1.8.0",
    "dotenv": "^17.2.3",
    "p-limit": "^7.2.0",
    "puppeteer": "^24.26.1",
    "turndown": "^7.2.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-plugin-jest": "^27.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
