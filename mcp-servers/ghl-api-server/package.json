{
  "name": "ghl-api-server",
  "version": "1.0.0",
  "type": "module",
  "description": "GoHighLevel API MCP Server with OAuth 2.0 authentication",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node --esm src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/utils",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "test:verbose": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --coverage --maxWorkers=2"
  },
  "keywords": [
    "mcp",
    "gohighlevel",
    "api",
    "oauth",
    "fastmcp"
  ],
  "author": "James Rodriguez",
  "license": "MIT",
  "dependencies": {
    "@gohighlevel/api-client": "2.2.1",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/express": "^5.0.4",
    "axios": "^1.12.2",
    "dotenv": "^16.3.0",
    "express": "^5.1.0",
    "fastmcp": "^1.0.0",
    "open": "^10.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
